{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "storybook"
    ],
    "rules": {
        "quote-props": ["error", "always"],
        "jsx-quotes": ["error", "prefer-double"],
        "quotes": ["error", "double"],
        "storybook/prefer-csf": "error"
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "17.0.2"
        }
    }
}
